{
	"name": "harmony102",
	"version": "1.0.0",
	"description": "this is a demo for angular, lerna, and yarn workspaces working in harmony",
	"main": "index.js",
	"repository": "https://github.com/BzenkoSergey/harmony.git",
	"author": "Zach Feldman",
	"license": "MIT",
	"private": true,
	"workspaces": [
		"packages/*"
	],
	"scripts": {
		"pull-submodules": "git pull --recurse-submodules",
		"build": "lerna run --scope @harmony102/angular-app build",
		"start": "lerna run --scope @harmony102/angular-app start",
		"cleanup": "lerna clean --yes && rm -rf ./node_modules",
		"release": "yarn run cleanup && lerna bootstrap && lerna run release"
	},
	"devDependencies": {
		"lerna": "3.14.1",
		"prettier": "1.7.4",
		"tsickle": "0.34.3",
		"ng-packagr": "4.7.1",
		"@angular-devkit/build-angular": "0.13.6",
		"@angular/compiler-cli": "7.2.10",
		"@angular/language-service": "7.2.10",
		"@types/jasmine": "2.8.8",
		"@types/jasminewd2": "2.0.3",
		"@types/node": "8.9.4",
		"codelyzer": "5.0.0-beta.2",
		"jasmine-core": "2.99.1",
		"jasmine-spec-reporter": "4.2.1",
		"karma": "3.0.0",
		"karma-chrome-launcher": "2.2.0",
		"karma-coverage-istanbul-reporter": "2.0.1",
		"karma-jasmine": "1.1.2",
		"karma-jasmine-html-reporter": "^0.2.2",
		"protractor": "5.4.0",
		"ts-node": "8.0.3",
		"tslint": "5.14.0",
		"typescript": "3.2.4",
		"@angular/cli": "7.3.6",
		"@angular-devkit/build-ng-packagr": "0.13.6"
	},
	"dependencies": {
		"@angular/animations": "7.2.10",
		"@angular/common": "7.2.10",
		"@angular/compiler": "7.2.10",
		"@angular/core": "7.2.10",
		"@angular/forms": "7.2.10",
		"@angular/http": "7.2.10",
		"@angular/platform-browser": "7.2.10",
		"@angular/platform-browser-dynamic": "7.2.10",
		"@angular/router": "7.2.10",
		"core-js": "2.6.8",
		"rxjs": "6.4.0",
		"zone.js": "0.9.0",

		"@harmony102/common": "0.0.56",
		"@harmony102/team1": "0.0.56",
		"@harmony102/team2": "0.0.57",
		"@harmony102/styles": "1.0.56"
	}
